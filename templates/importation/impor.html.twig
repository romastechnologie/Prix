                    </svg>
                    <!--end::Svg Icon-->
                </span>Importation</a>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(drop) }}
                <div class="form-group row">
                    <div class="col-12 mb-10">
                        <div>{{ form_label(drop.sel) }} </div>
                        {{ form_widget(drop.sel) }}
                    </div>
                    <div class="col-12">
                        <div class="dropzone dropzone-default dropzone-primary">
                            <div class="dropzone-msg dz-message">
                                
                                {{ form_row(drop.dropFile) }}
                                <span ></span>
                                <span id="text"></span>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="card-footer">
                    <button type="submit" id="soum" class="btn btn-primary mr-2">{{ button_label|default('Enregistrer') }}</button>
                    {# <button type="submit" class="btn btn-primary mr-2">Enregistrer</button> #}
                    <button type="reset" class="btn btn-secondary">Annuler</button>
                </div>
            {{ form_end(drop) }}
        </div>
    </div>
{% endblock %}