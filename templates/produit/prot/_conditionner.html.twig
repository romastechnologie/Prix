<div class="card card-custom mt-5" id="kt_card_2">
	<div class="card-header bg-primary" style="min-height: 25px !important;">
		<div class="card-title">
			<h3 class="card-label text-white">PRIX PAR CONDITIONNEMENT DU PRODUIT</h3>
		</div>
		<div class="card-toolbar">
			<a href="#" class="btn btn-icon btn-sm btn-hover-light-primary supprimer" data-card-tool="remove" data-toggle="tooltip" data-placement="top" title="Remove Card">
			<i class="ki ki-close icon-nm"></i>
			</a>
		</div>
	</div>
	<div class="card-body">
		    <div class="form-group row mb-2">
        <div class="col-12">
            <div class="row">
                <div class="col-3">
                    {{ form_row(form.conditionnement) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.qteProduit) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.prixAchat) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.prixRevient) }}
                </div>
            </div> <br>
            <div class="row">
                <div class="col-3">
                    {{ form_row(form.prixVente) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.prixMin) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.prixMax) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.prixConcurentiel) }}
                </div>
            </div>
        </div>
        
        <div class="col-12">
            <div class="row">
            <div class="col-12">
                    <div class="conditionnerCateClients"
                        data-index="{{ form.conditionnerCateClients|length > 0 ? form.conditionnerCateClients|last.vars.name + 1 : 0 }}"
                        data-prototype="{% autoescape 'html' %}{{ include('produit/prot/_cateClientCon.html.twig',
                                { 'form': form.conditionnerCateClients.vars.prototype  }) | escape }}{% endautoescape %}">
                        {% for cat in form.conditionnerCateClients %}
                            {{ include("produit/prot/_cateClientCon.html.twig", { form: cat }) }}
                        {% endfor %}
                    </div>
                    <button type="button" class="add_item_link2 btn btn-outline-success ml-0 mt-5" data-collection-holder-class="conditionnerCateClients">Ajouter Prix Client</button>
                </div>
            </div>
        </div>
       
    </div>
	</div>
</div>

