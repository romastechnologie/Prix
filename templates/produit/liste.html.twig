const isObject2 = (obj) => {
  return typeof obj === 'object' && !Array.isArray(obj) && obj !== null;
}

const objToArray = (obj) => {
  return Object.keys(obj).map((key) => {
    return [
      key, isObject2(obj[key]) ?
        objToArray(obj[key]) :
        obj[key]
    ];
  });
}

