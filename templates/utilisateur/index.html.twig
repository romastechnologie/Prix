{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block content %}

    <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-header">
                <div class="card-title">
                    <span class="card-icon">
                        <i class="flaticon2-image-file text-primary"></i>
                    </span>
                    <h3 class="card-label">Liste des utilisteurs</h3>
                </div>
                <div class="card-toolbar">
                    <a  href="{{ path('enregistrement_g_prix') }}" class="btn btn-primary font-weight-bolder">
                    <span class="svg-icon svg-icon-md">
                        <!--begin::Svg Icon | path:/metronic/theme/html/demo1/dist/assets/media/svg/icons/Design/Flatten.svg-->
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24" />
                                <circle fill="#000000" cx="9" cy="15" r="6" />
                                <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
                            </g>
                        </svg>
                        <!--end::Svg Icon-->
                    </span>Nouveau</a>
                    <!--end::Button-->
                </div>
            </div>
            <div class="card-body">
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-foot-custom table-checkable" id="datatable" style="margin-top: 13px !important">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Telephone</th>
                            <th>Username</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                        <tbody>
                        {% if utilisateurs is defined and utilisateurs is not empty %}
                            {% for utilisateur in utilisateurs %}
                                <tr>
                                    <td>{{ utilisateur.id }}</td>
                                    <td>{{ utilisateur.email }}</td>
                                    <td>{{ utilisateur.nom }}</td>
                                    <td>{{ utilisateur.prenom }}</td>
                                    <td>{{ utilisateur.telephone }}</td>
                                    <td>{{ utilisateur.username }}</td>
                                    <td>
                                        {# <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}">show</a> #}
                                        <a class="btn btn-warning" href="{{ path('app_utilisateur_inscription_edit', {'id': utilisateur.id}) }}">Modifier</a>
                                         {# {{ include('utilisateur/_delete_form.html.twig') }} #}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="12">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
    <script>
        $('.table').dataTable({
                                language: {
                    search:         "CHERCHER",
                    lengthMenu:    "AFFICHER _MENU_ ELEMENTS",
                    info:           "AFFICHAGE DE _START_ A _END_ SUR _TOTAL_ ENREGISTREMENTS",
                    infoEmpty:      "AFFICHAGE DE 0 A 0 SUR 0 ENREGISTREMENT",
                    loadingRecords: "CHARGEMENT...",
                    zeroRecords:    "AUCUN ELEMENT A AFFICHER",
                    emptyTable:     "AUCUNE DONNEE DISPONIBLE DANS LE TABLEAU",
                    paginate: {
                        "sFirst":      "<<",
                        previous:   "<",
                        next:       ">",
                        "sLast":       ">>"
                    },
                    aria: {
                        sortAscending:  ": activer pour trier la colonne par ordre croissant",
                        sortDescending: ": activer pour trier la colonne par ordre décroissant"
                    }
                    
                },
        });
    </script>
{% endblock %}